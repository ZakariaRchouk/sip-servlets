<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE sip-app 
  PUBLIC "-//Java Community Process//DTD SIP Application 1.0//EN" 
  "http://www.jcp.org/dtd/sip-app_1_0.dtd">
<sip-app>
  
  <display-name>MyEcoServlet</display-name>
  
  <servlet>
    <servlet-name>MyServlet</servlet-name>
    <servlet-class>com.MyEcoServlet.EcoServlet</servlet-class>
  </servlet>
  <servlet-mapping>
    <servlet-name>MyServlet</servlet-name>
    <pattern>
      <or>
            <equal><var>request.method</var><value>REGISTER</value></equal>
            <equal><var>request.method</var><value>INVITE</value></equal>
      </or>
    </pattern>
  </servlet-mapping>
  
</sip-app>